FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy Prisma schema first
COPY prisma ./prisma/

# Generate Prisma Client
RUN npx prisma generate

# Copy application code
COPY . .

# Create database directory
RUN mkdir -p /app/database

# Expose port
EXPOSE 5000

# Start development server with nodemon
CMD ["npm", "run", "dev"]
